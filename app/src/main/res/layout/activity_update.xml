<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update"
    android:id="@+id/consLayout2"
    android:background="@drawable/bc"
    android:orientation="vertical"
    android:gravity="right">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar1"
        android:background="@drawable/style"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="120dp"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/con1"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tohead"
            android:text="Add Census Officer"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/con1"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1"
        >

        <TextView
            android:layout_width="360dp"
            android:layout_height="21dp"
            android:id="@+id/name123"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Name"
            android:textColor="#27116f"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.086"/>

        <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameview"
            android:background="@drawable/buttondesign"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#27116f"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="#021b74"
            android:hint="name"
            android:fontFamily="@font/open_sans_bold"
            android:inputType="textCapWords"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/con3"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/con1"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp">
        <TextView
            android:layout_width="354dp"
            android:layout_height="21dp"
            android:id="@+id/pfno"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="PFno"
            android:textColor="#27116f"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.086"/>

        <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/Pfno"
            android:background="@drawable/buttondesign"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#27116f"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pfno"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColorHint="#021b74"
            android:hint="pfno"
            android:fontFamily="@font/open_sans_bold"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:singleLine="true"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:id="@+id/linearLayout4"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/con2"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/con3"
        app:layout_constraintVertical_bias="0.0"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="360dp"
            android:layout_height="21dp"
            android:id="@+id/mobile"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Mobile No"
            android:textAlignment="viewStart"
            android:textColor="#012B74"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:id="@+id/mobileview"
            android:background="@drawable/buttondesign"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textColor="#012B74"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mobile"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.066"
            android:textColorHint="#021b74"
            android:hint="Enter mobile no"
            android:layout_gravity="center"
            app:layout_constraintHorizontal_bias="0.51"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/submit"
            android:background="@drawable/style"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/mobileview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>