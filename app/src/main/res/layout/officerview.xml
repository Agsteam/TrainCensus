<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    card_view:cardBackgroundColor="#007fff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="3dp"
    tools:foreground="@android:style/Widget.DeviceDefault.GridView">

    <RelativeLayout
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#fff"
            android:text="Name"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/nameview"
            android:layout_width="277dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-43dp"
            android:layout_marginEnd="19dp"
            android:background="#fff"
            android:text="Nameview"
            android:textColor="#000"
            android:textSize="30sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/station1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="@+id/name1"

        >

        <TextView
            android:id="@+id/station"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#fff"
            android:text="station"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/stationview"
            android:layout_width="277dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/station"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-43dp"
            android:layout_marginEnd="19dp"
            android:background="#fff"
            android:text="stationview"
            android:textColor="#000"
            android:textSize="30sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/date1"
        android:layout_width="371dp"
        android:layout_height="21dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="@+id/station1"

        >

        <TextView
            android:id="@+id/date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#fff"
            android:text="date"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dateview"
            android:layout_width="277dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/date"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-43dp"
            android:layout_marginEnd="19dp"
            android:background="#fff"
            android:text="dateview"
            android:textColor="#000"
            android:textSize="30sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"

        >

        <TextView
            android:id="@+id/shiftin"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Shift in"
            android:textAlignment="viewStart"
            android:textColor="#205cf6"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp">

        <TextView


            android:id="@+id/shiftout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Shift out"
            android:textAlignment="viewStart"
            android:textColor="#205cf6"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <!--****ADDRESS LINE 2 FIELD****-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"

        >

        <TextView
            android:id="@+id/shiftoutview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttondesign"
            android:hint="7.00pm"
            android:inputType="number"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#012B74"
            android:textColorHint="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dad8d8" />
    </RelativeLayout>


</android.support.v7.widget.CardView>